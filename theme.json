{
  "$schema": "https://schemas.wp.org/wp/6.5/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "layout": {
      "contentSize": "620px",
      "wideSize": "720px"
    },
    "useRootPaddingAwareAlignments": true,
    "spacing": {
      "padding": true,
      "units": [
        "px",
        "em",
        "rem",
        "vh",
        "vw",
        "%"
      ],
      "margin": true,
      "blockGap": true,
      "spacingSizes": [
        {
          "slug": "supersmall",
          "size": "10px",
          "name": "Super Small"
        },
        {
          "slug": "medium",
          "size": "20px",
          "name": "Medium"
        },
        {
          "slug": "h-space",
          "size": "50px",
          "name": "Huge Space"
        }
      ]
    },
    "dimensions": {
      "minHeight": true      
    },
    "typography": {
      "letterSpacing": true,
      "fontStyle": true,
      "textTransform": true,
      "lineHeight": true,
      "textDecoration": true,
      "fontWeight": true,
      "fontSizes": [
        {
          "slug": "XS-small",
          "size": "12px",
          "name": "XS Small"
        },
        {
          "slug": "medium",
          "size": "14px",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "16px",
          "name": "Large"
        },
        {
          "slug": "XL-large",
          "size": "18px",
          "name": "XL Large"
        },
        {
          "slug": "XX-large",
          "size": "20px",
          "name": "XX Large"
        },
        {
          "slug": "XXX-large",
          "size": "22px",
          "name": "XXX Large"
        }
      ],
      "customFontSize": true,
      "fontFamilies": [
        {
          "slug": "arial",
          "name": "Regular Text",
          "fontFamily": "'Lucida Sans', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Geneva, Verdana, sans-serif"
        },
        {
          "slug": "text-font",
          "name": "Body Font",
          "fontFamily": "'arial', 'railwayregular', 'sans-serif'"
        },
        {
          "slug": "heading-font",
          "fontFamily": "Cardo",
          "fontFace": [
            {
              "fontFamily": "Cardo",
              "fontStyle": "normal",
              "fontWeight": "400",
              "src": ["file:./assets/fonts/cardo/cardo_normal_400.woff2"]
            },
            {
              "fontFamily": "Cardo",
              "fontStyle": "italic",
              "fontWeight": "400",
              "src": ["file:./assets/fonts/cardo/cardo_italic_400.woff2"]
            },
            {
              "fontFamily": "Cardo",
              "fontStyle": "normal",
              "fontWeight": "700",
              "src": ["file:./assets/fonts/cardo/cardo_normal_700.woff2"]
            }
          ]
        }
      ]
    },
    "color": {
      "defaultPalette": true,
      "custom": true,
      "text": true,
      "background": true,
      "link": true,
      "palette": [
        {
          "slug": "sky-blue",
          "color": "#2e86de",
          "name": "Sky Blue"
        },
        {
          "slug": "orange",
          "color": "#f7941e",
          "name": "Orange"
        },
        {
          "slug": "green",
          "color": "#00a651",
          "name": "Green"
        },
        {
          "slug": "red",
          "color": "#d0021b",
          "name": "Red"
        }
      ],
      "defaultGradients": true,
      "customGradient": true,
      "gradients": [
        {
          "slug": "gradients-lightblue",
          "gradient": "linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(9,9,121,1) 35%, rgba(0,212,255,1) 100%)",
          "name": "Light Blue"
        },
        {
          "slug": "gradients-purple",
          "gradient": "linear-gradient(90deg, rgba(11,255,201,1) 0%, rgba(9,121,60,1) 53%, rgba(164,0,255,1) 100%)",
          "name": "purple"
        },
        {
          "slug": "gradients-ex",
          "gradient": "linear-gradient(90deg, rgba(0,36,23,1) 0%, rgba(9,121,106,1) 54%, rgba(0,212,255,1) 100%)",
          "name": "ex"
        },
        {
          "slug": "gradients-red",
          "gradient": "linear-gradient(90deg, rgba(11,255,201,1) 0%, rgba(9,121,106,1) 53%, rgba(0,212,255,1) 100%)",
          "name": "Mint"
        }
      ],
      "defaultDuotone": true,
      "customDuotone": true,
      "duotone": [
        {
          "slug": "duotone-lightblue",
          "colors": ["#2e86de", "#00a651"],
          "name": "amar Blue"
        }
      ]
    },
    "blocks": {
      "core/post-title": {
        "color": {
          "background": false
        }
      },
      "core/post-date": {
        "color": {
          "background": true,
          "defaultGradients": true,
          "customGradient": false,
          "gradients": []
        },
        "typography": {
          "fontFamilies": []
        }
      },
      "core/cover": {
        "color": {
          "defaultDuotone": true,
          "customDuotone": false,
          "duotone": []
        }
      },
      "core/search": {
        "spacing": {
          "padding": true,
          "margin": true,
          "blockGap": true
        },
        "dimensions": {
          "minHeight": true
        }
      }
    }
  },
  "styles": {
    "css": " .main-title {font-size: 40px;}",
    "blocks": {
      "core/column": {
        "css": "box-shadow: 0 0 5px #aaa; & .wp-block-search__input {box-shadow: 0 0 5px #aaa;}"
      },
      "core/search": {
        "spacing": {
         "margin": {
           "top": "10px",
           "bottom": "10px",
           "left": "10px",
           "right": "10px"
         }
        }
      }
    },
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--sky-blue)"
    },
    "spacing": {
      "padding": {
        "left": "20px",
        "right": "20px"
      }      
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--body)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "fontStyle": "normal",
      "fontWeight": "400",
      "lineHeight": "1.55"
    },
    "elements": {
      "heading": {
        "fontFamily": "var(--wp--preset--font-family--heading)",
        "fontSize": "var(--wp--preset--font-size--large)",
        "fontStyle": "normal",
        "fontWeight": "600",
        "lineHeight": "1.5"
      },
      "link": {
        ":hover": {
          "color": "var(--wp--preset--color--purple)",
          "textDecoration": "none"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontStyle": "normal",
          "fontWeight": "600",
          "lineHeight": "1.5"
        },
        "color": "#06c"
      },
      "button": {
        "fontFamily": "var(--wp--preset--font-family--heading)",
        "fontStyle": "normal",
        "fontWeight": "600",
        "lineHeight": "1.5",
        "border": {
          "width": "1px",
          "style": "solid",
          "color": "var(--wp--preset--color--primary)"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "area": "header",
      "title": "My Header"
    },
    {
      "name": "footer",
      "area": "footer",
      "title": "My Footer"
    },
    {
      "name": "sidebar",
      "area": "uncategorized",
      "title": "My Sidebar"
    }
  ],
  "customTemplates": [
    {
      "name": "amar-template",
      "title": "My Custom Template",
      "postTypes": [
        "post", "page"
      ]
    }
  ]
}
